{
	"name": "efiand-linters",
	"version": "0.3.7",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/efiand/linters.git"
	},
	"author": "efiand",
	"license": "ISC",
	"exports": {
		"./stylelint": {
			"import": "./stylelint.config.js"
		},
		"./eslint": {
			"import": "./eslint.config.js"
		},
		"./prettier": {
			"import": "./prettier.config.js"
		}
	},
	"typesVersions": {
		"*": {
			"stylelint": [
				"stylelint.config.d.ts"
			]
		}
	},
	"bugs": {
		"url": "https://github.com/efiand/linters/issues"
	},
	"type": "module",
	"pre-commit": [
		"lint-format"
	],
	"scripts": {
		"lint-format": "prettier --write . && eslint . --fix",
		"lint": "prettier --check . && eslint ."
	},
	"dependencies": {
		"efiand-shared": "0.2.2"
	},
	"devDependencies": {
		"@fastify/pre-commit": "2.2.0",
		"eslint": "9.14.0",
		"prettier": "3.3.3",
		"stylelint": "16.10.0"
	}
}
